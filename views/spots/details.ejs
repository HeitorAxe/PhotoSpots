<!--Importing template-->
<% layout('./layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <img src="<%=spot.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=spot.title%></h5>
              <p class="card-text"><%=spot.descritpion%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%=spot.location%></li>
              <% if(spot.hasPrice){%>
                <li class="list-group-item">$<%=spot.price%></li>
              <% } else{%>
                <li class="list-group-item">Free</li>
              <%} %>
              <% if(spot.category){%>
                <li class="list-group-item text-muted"><%=spot.category%></li>
              <% } %>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-primary" href="/spots/<%= spot._id %>/edit">Edit</a>
                <form class="d-inline" action="/spots/<%=spot._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
          </div>
    </div>
</div>